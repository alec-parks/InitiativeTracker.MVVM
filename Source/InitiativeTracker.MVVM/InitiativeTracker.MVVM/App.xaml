<Application x:Class="InitiativeTracker.MVVM.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:InitiativeTracker.MVVM.ViewModels"
             xmlns:c="clr-namespace:InitiativeTracker.MVVM.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <vm:ViewModelLocator x:Key="Locator" />
        <c:CombatantToColorConverter x:Key="ColorConverter" Brush="#FF00C5FF" />
        <c:CombatantToBool x:Key="CombatantToBool" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Application.Resources>
</Application>