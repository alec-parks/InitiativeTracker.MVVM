<Window x:Class="InitiativeTracker.MVVM.Views.Dialogs.SetInitiativeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:InitiativeTracker.MVVM.Views"
        DataContext="{Binding SetInitiativeViewModel, Source={StaticResource Locator}}"
        Title="SetInitiativeDialog" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition/>
    		<ColumnDefinition/>
    	</Grid.ColumnDefinitions>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="5*"/>
    		<RowDefinition/>
    	</Grid.RowDefinitions>
        <ListBox Margin="0,0,0,5" ItemsSource="{Binding Combatant}"  Grid.ColumnSpan="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <views:SetInitiativeView />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Start Combat!" Grid.Row="1" Margin="10,5,5,10"/>
        <Button Content="No sir, I don't like it" Grid.Column="1" Grid.Row="1" Margin="5,5,10,10"/>
    </Grid>
</Window>
